@model WitBird.Sex.Web.Areas.Admin.Models.VideoModel
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@section head
{
    <script src="/Areas/Admin/Content/upload/jquery-1.4.2.min.js" type="text/javascript"></script>
    <script src="/Areas/Admin/Content/upload/jquery.form.js" type="text/javascript"></script>
    <script src="/Areas/Admin/Content/upload/uploadimage.js" type="text/javascript"></script>
    <script type="text/javascript">
        function editVideo() {
            $.ajax({
                url: '/admin/video/edit',
                data: $("#editform").serialize(),
                type: 'POST',
                success: function (msg) {
                    if (msg == "success") {
                        alert("更新成功");
                        window.location.href = "/admin/video/index";
                    }
                    else {
                        alert(msg);
                    }
                },
                error: function (msg) {
                    alert("网络异常，更新失败");
                }
            });
        }
    </script>
}
<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i><a href="/admin/">后台首页</a><span class="crumb-step">&gt;</span>
        <a class="crumb-name" href="javascript:void(0)">视频管理</a><span class="crumb-step">&gt;</span><span>发布视频</span>
    </div>
</div>

<div class="result-wrap">
    <div class="result-content">
        <form action="/admin/video/edit" method="post" id="editform" name="myform" enctype="multipart/form-data">
        <table class="insert-tab" width="100%">
            <tbody>
                <tr>
                    <th width="120">
                        <input type="hidden" name="id" value="@Model.Video.Id" />
                        <i class="require-red">*</i>标题：
                    </th>
                    <td>
                        <input class="common-text required" id="Title" name="t" style="width: 700px;" value="@Model.Video.Title" type="text">
                    </td>
                </tr>
                <tr>
                    <th>
                        关键字：
                    </th>
                    <td>
                        <input class="common-text" id="Keywords" name="k" style="width: 700px;" value="@Model.Video.Keywords" type="text">
                    </td>
                </tr>
                <tr>
                    <th>
                        描述：
                    </th>
                    <td>
                        <textarea id="Description" name="d" class="common-text" rows="3" style="width: 700px;
                            height: 60px; line-height: 20px; padding: 5px 4px; margin-top: 8px;" maxlength="4000">@(new HtmlString(Model.Video.Description))</textarea>
                    </td>
                </tr>
                <tr>
                    <th>
                        封面：
                    </th>
                    <td>
                        <input class="common-text" name="imageurl" style="width: 400px;" value="@Model.Video.Thumbnail" type="text" id="Thumbnail" onclick="uploadimage(this)" url="/Areas/Admin/content/upload/uploadimage210140.ashx">
                        点击上传，最佳尺寸210*140
                    </td>
                </tr>
                <tr>
                    <th>
                        电脑版视频：
                    </th>
                    <td>
                        <textarea id="Url" name="u" class="common-text" rows="3" style="width: 700px;
                            height: 100px; line-height: 20px; padding: 5px 4px; margin-top: 8px;" maxlength="4000">@(new HtmlString(Model.Video.Url))</textarea>
                    </td>
                </tr>
                <tr>
                    <th>
                        移动版视频：
                    </th>
                    <td>
                        <textarea id="UrlM" name="um" class="common-text" rows="3" style="width: 700px;
                            height: 100px; line-height: 20px; padding: 5px 4px; margin-top: 8px;" maxlength="4000">@(new HtmlString(Model.Video.UrlM))</textarea>
                    </td>
                </tr>
                <tr>
                    <th>
                    </th>
                    <td>
                        <input class="btn btn-primary btn6 mr10" value="提交" type="button" onclick="editVideo()">
                    </td>
                </tr>
            </tbody>
        </table>
        </form>
    </div>
</div>

<script type="text/javascript">
    ShowMenuItem(document.getElementById("menu_5"));
</script>