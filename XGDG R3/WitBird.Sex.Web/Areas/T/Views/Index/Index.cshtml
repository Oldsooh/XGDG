@{
    Layout = null;
}

@model WitBird.Sex.Web.Areas.T.Models.ImagesModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>今日图集</title>
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.4/css/bootstrap.min.css" />
</head>
<body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>标题</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AlbumList != null && Model.AlbumList.Count > 0)
                {
                foreach (var item in Model.AlbumList)
                {
var url = "/" + item.CategoryId + "/" + item.Id + ".html";
                <tr>
                    <td>@item.Id</td>
                    <td><a href="@url" title="@item.Title">@item.Title</a></td>
                    <td>
                        <a href="/t/index/edit/@item.Id">编辑</a>
                        <a href="/t/index/delete/@item.Id" onclick="if(confirm('亲，你确认要删除 (@item.Title) 吗？')==false)return false;">删除</a>
                    </td>
                </tr>
                }
                }
            </tbody>
        </table>
</body>
</html>