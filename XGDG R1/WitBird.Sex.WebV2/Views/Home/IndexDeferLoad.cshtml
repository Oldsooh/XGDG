<!-- 焦点图 -->
<div class="row tops">
    <div class="col-md-9">
        <div class="focus">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- 小点导航 -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                </ol>
                <!-- 正文图片 -->
                <div class="carousel-inner" role="listbox">
                    @if (Model.Slides != null && Model.Slides.Count > 0)
                    {
                        foreach (var item in Model.Slides)
                        {
                    <div class="item">
                        <img src="@Uitlity.WebHelper.GetImagePath(item.Image)" alt="@item.Title">
                        <div class="carousel-caption">
                           @(new HtmlString(item.Title))
                        </div>
                    </div>
                        }
                    }
                </div>
                <!-- 左右控制 -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button"
                    data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">上一页</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button"
                    data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">下一页</span>
                </a>
            </div>
        </div>
    </div>

    <!-- 右侧 -->
    <div class="col-md-3 hidden-xs hidden-sm">
        <div class="row">
            <div class="col-md-12 col-xs-6">
                @if (Model.NewUploads != null && Model.NewUploads.Count > 0)
                {
                    foreach (var item in Model.NewUploads)
                    {
                        string url = "/show/" + item.Id + ".html";
                <div class="media toppost">
                    <div class="media-left">
                        <a href="@url" title="@item.Title">
                            <img class="media-object" src="@Uitlity.WebHelper.GetImagePath(item.UrlThumbnailWidth102x102)" alt="@item.Title">
                        </a>
                    </div>
                    <div class="media-body">
                        <h2 class="media-heading">
                            <a href="@url" title="@item.Title">@item.Title</a>
                        </h2>
                        <p>时间：@item.InsertTime.ToString("yyyy-MM-dd")</p>
                        <p>
                            分类：<a href="/@item.CategoryId" title="@item.CategoryId">@item.CategoryId</a>
                        </p>
                    </div>
                </div>
                <hr>
                    }
                }
            </div>
        </div>
    </div>
</div>

