@model WitBird.Sex.WebV2.Areas.Admin.Models.VideoModel
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i><a href="/admin/">后台首页</a><span class="crumb-step">&gt;</span>
        <a class="crumb-name" href="javascript:void(0)">视频管理</a><span class="crumb-step">&gt;</span><span>视频列表</span>
    </div>
</div>
<div class="search-wrap">
    <div class="search-content">
        <form action="/admin/video/index" method="get">
            <table class="search-tab">
                <tbody>
                    <tr>
                        <th width="70">关键字:
                        </th>
                        <td>
                            <input class="common-text" placeholder="关键字" name="keywords" value="@Model.Keywords" id="" type="text">
                        </td>
                        <td>
                            <input class="btn btn-primary btn2" value="查询" type="submit">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <table class="result-tab" width="100%" style="min-width: 1050px;">
            <tbody>
                <tr>
                    <th class="tc" style="width: 40px;">
                        <input class="allChoose" name="" type="checkbox">
                    </th>
                    <th style="width: 50px;">排序
                    </th>
                    <th style="width: 50px;">视频ID
                    </th>
                    <th>标题
                    </th>
                    <th style="width: 40px;">访问量
                    </th>
                    <th style="width: 70px;">发布时间
                    </th>
                    <th style="width: 80px;">操作
                    </th>
                </tr>
                @if (Model.Videos != null && Model.Videos.Count > 0)
                {
                    int number = (Model.PageIndex - 1) * Model.PageSize;
                    foreach (var item in Model.Videos)
                    {
                        number += 1;
                    <tr>
                        <td class="tc">
                            <input name="id[]" value="58" type="checkbox">
                        </td>
                        <td>
                            @number
                        </td>
                        <td>
                            @item.Id
                        </td>
                        <td title="@item.Title" style="min-width:60px; overflow:hidden;">
                            @{ string url = "/play/" + item.Id + ".html"; }
                            <a target="_blank" href="@url" title="@item.Title">@item.Title</a>
                        </td>
                        <td style="text-align: right; padding-right: 10px;">
                            @item.ViewTime
                        </td>
                        <td>
                            @item.InsertTime.ToString("yyyy-MM-dd")
                        </td>
                        <td>
                            <a class="link-del" href="/admin/video/delete/@item.Id" onclick="if(confirm('亲，你确认要删除 (@item.Title) 吗？')==false)return false;">删除</a>
                            <a class="link-del" href="/admin/video/edit/@item.Id">编辑</a>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
        <div class="list-page">
            @if (Model.PageCount > 1)
            {
                for (int step = 1; step <= Model.PageCount; step = step + Model.PageStep)
                {
                    if (Model.PageIndex >= step && Model.PageIndex < step + Model.PageStep)
                    {
                        //上一页
                        if (Model.PageIndex > 1)
                        {
                <span><a href="/admin/video/index?page=@(Model.PageIndex - 1)&keywords=@Model.Keywords" class="prv">上一页</a></span>
                        }
                        //首页
                        if (Model.PageStep < Model.PageIndex)
                        {
                <span><a href="/admin/video/index?page=1&keywords=@Model.Keywords">1</a></span>
                <span><a href="javascript:void(0)">...</a></span>
                        }
                        //分页
                        for (int i = step; i < step + Model.PageStep; i++)
                        {
                            if (i <= Model.PageCount)
                            {
                                if (i == Model.PageIndex)
                                {
                <span><a href="/admin/video/index?page=@i&keywords=@Model.Keywords" class="no">@i</a></span>
                                }
                                else
                                {
                <span><a href="/admin/video/index?page=@i&keywords=@Model.Keywords">@i</a></span>
                                }
                            }
                        }
                        //末页
                        if (step + Model.PageStep <= Model.PageCount)
                        {
                <span><a href="javascript:void(0)">...</a></span>
                <span><a href="/admin/video/index?page=@Model.PageCount&keywords=@Model.Keywords">@Model.PageCount</a></span>
                        }
                        //下一页
                        if (Model.PageIndex < Model.PageCount)
                        {
                <span><a href="/admin/video/index?page=@(Model.PageIndex + 1)&keywords=@Model.Keywords" class="next">下一页</a></span>
                        }
                    }
                }

            }
        </div>
    </div>
    <div style="clear: both;">
    </div>
</div>

<script type="text/javascript">
    ShowMenuItem(document.getElementById("menu_5"));
</script>