@model WitBird.Sex.WebV2.Areas.Admin.Models.AdvertisementModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i><a href="/admin/">后台首页</a><span class="crumb-step">&gt;</span>
        <a class="crumb-name" href="javascript:void(0)">系统管理</a><span class="crumb-step">&gt;</span>
        <span>广告设置</span>
    </div>
    <div class="result-wrap">
        <div class="result-content">
            <form action="/admin/advertisement/edit" method="post" id="addform" name="myform" enctype="multipart/form-data">
                <table class="insert-tab" width="100%">
                    <tbody>
                        <tr>
                            <th width="120">
                                <i class="require-red">*</i>广告ID：
                            </th>
                            <td>
                                <input class="common-text required" id="Id" name="Id" style="width: 100px;" value="@Model.Advertisement.Id" readonly="readonly" type="text">
                            </td>
                        </tr>
                        <tr>
                            <th>广告名称：
                            </th>
                            <td>
                                <input class="common-text" id="Name" name="Name" style="width: 700px;" value="@Model.Advertisement.Name" type="text" maxlength="300">
                            </td>
                        </tr>
                        <tr>
                            <th>描述：
                            </th>
                            <td>
                                <textarea id="Description" name="AdLink" class="common-text" rows="3" style="width: 700px; height: 200px; line-height: 20px; padding: 5px 4px; margin-top: 8px;"
                                    maxlength="4000">@(new HtmlString(Model.Advertisement.AdLink))</textarea>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <input class="btn btn-primary btn6 mr10" value="提交" type="submit">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    ShowMenuItem(document.getElementById("menu_1"));
</script>
