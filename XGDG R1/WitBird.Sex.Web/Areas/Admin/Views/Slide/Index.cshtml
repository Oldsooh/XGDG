@model WitBird.Sex.Web.Areas.Admin.Models.SlideModel
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@section head
{
    <script src="/Areas/Admin/Content/upload/jquery-1.4.2.min.js" type="text/javascript"></script>
    <script src="/Areas/Admin/Content/upload/jquery.form.js" type="text/javascript"></script>
    <script src="/Areas/Admin/Content/upload/uploadimage.js" type="text/javascript"></script>
}
<div class="crumb-wrap">
    <div class="crumb-list">
        <i class="icon-font"></i><a href="/admin/">后台首页</a><span class="crumb-step">&gt;</span>
        <a class="crumb-name" href="javascript:void(0)">系统管理</a><span class="crumb-step">&gt;</span>
        <span>幻灯设置</span>
    </div>
</div>
<div class="search-wrap">
    <div class="search-content">
        <form action="/admin/slide/add" method="post">
            <table id="addtable" class="search-tab" style="display: block;">
                <tbody>
                    <tr>
                        <td style="width: 50px; text-align: right;">标题:
                        </td>
                        <td>
                            <input class="common-text" placeholder="显示标题" name="Title" value="" id="" type="text"
                                style="width: 100px;">
                        </td>
                        <td style="width: 40px; text-align: right;">连接:
                        </td>
                        <td>
                            <input class="common-text" placeholder="链接地址" name="Url" value="" id="" type="text"
                                style="width: 250px;">
                        </td>
                        <td style="width: 40px; text-align: right;">图片:
                        </td>
                        <td>
                            <input class="common-text" placeholder="图片地址 745*340" name="Image" value="" id="imageupload"
                                type="text" style="width: 250px;" onclick="uploadimage(this)" url="/Areas/Admin/content/upload/uploadimage400300.ashx">
                        </td>
                        <td>
                            <input class="btn btn-primary btn2" name="sub" value="添加" type="submit">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
<div class="result-wrap">
    <form name="myform" id="myform" method="post">
        <div class="result-content" style="min-height: 441px;">
            <table class="result-tab" style="width: 1020px;">
                <tbody>
                    <tr>
                        <th>标题
                        </th>
                        <th>连接
                        </th>
                        <th>图片
                        </th>
                        <th>日期
                        </th>
                        <th>操作
                        </th>
                    </tr>
                    @if (Model.Slides != null && Model.Slides.Count > 0)
                    {
                        foreach (var item in Model.Slides)
                        {
                        <tr>
                            <td>@item.Title
                            </td>
                            <td>@item.Url
                            </td>
                            <td>@item.Image
                            </td>
                            <td>@item.InsertTime.ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td>
                                <a class="link-del" href="/admin/slide/delete/@item.Id" onclick="if(confirm('亲，你确认要删除 (@item.Title) 吗？')==false)return false;">删除</a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>

<script type="text/javascript">
    ShowMenuItem(document.getElementById("menu_1"));
</script>


