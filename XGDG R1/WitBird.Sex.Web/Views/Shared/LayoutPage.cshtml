            </div>
            <div class="nav">
                <ul>
                    <li class="line"></li>
                    <li id="home" class="hover"><a href='/'>首页</a></li>
                    @if (WitBird.Sex.Web.Cache.Categories != null)
                    {
                        foreach (var item in WitBird.Sex.Web.Cache.Categories)
