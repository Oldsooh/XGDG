                    <a
                        href='/home/aboutus'>免责声明</a><b>&#8226;</b>
                    <a
                        href='javascript:void(0)'>联系我们：122889741@qq.com</a>

                </div>
                <div class="w">
                    Copyright &copy; 2013-2015 [@WitBird.Sex.Web.Cache.WebConfig.WebName] &nbsp;&nbsp;
                    @WitBird.Sex.Web.Cache.WebConfig.ICP &nbsp;&nbsp;
                </div>
            </div>
        </div>
    </div>
    <div id="gotop" title="回到顶部"></div>
    <script type="text/javascript" src="/content/script/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/content/script/jquery.sgallery.js"></script>
    <script type="text/javascript" src="/content/script/global.js"></script>
    <script type="text/javascript" src="/content/script/jquery.lazyload.min.js"></script>
