@model WitBird.Sex.Web.Models.HomeModel

<div class="index-box">
    <div class="slide">
        <div class="FocusPic">
            <div class="content" id="main-slide">
                <div class="changeDiv">
                    @if (Model.Slides != null && Model.Slides.Count > 0)
                    {
                        foreach (var item in Model.Slides)
                        {
                        <a target="_blank" href="@item.Url" title="@item.Title">
                            <img src="@Uitlity.WebHelper.GetImagePath(item.Image)" alt="@item.Title" width="745" height="340" /></a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="newpic">
        <div class="title-a">
            <h2>今日最新</h2>
        </div>
        <ul class="d1">
            @if (Model.NewUploads != null && Model.NewUploads.Count > 0)
            {
                foreach (var item in Model.NewUploads)
                {
                    string url = "/show/" + item.Id + ".html";
                <li><a target="_blank" href="@url" title="@item.Title">@item.Title</a>
                </li>
                }
            }
        </ul>
    </div>
</div>

